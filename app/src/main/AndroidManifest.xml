<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arifhasnat.movielist">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieList">
        <activity
            android:name=".view.TestActivity2"
            android:label="@string/title_activity_test2"
            android:theme="@style/Theme.MovieList.NoActionBar" />
        <activity
            android:name=".view.TestActivity"
            android:label="@string/title_activity_test"
            android:theme="@style/Theme.MovieList.NoActionBar" />
        <activity
            android:name=".view.MovieDetails"
            android:label="@string/title_activity_movie_details"
            android:theme="@style/Theme.MovieList.NoActionBar" />
        <activity
            android:name=".view.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.MovieList.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>